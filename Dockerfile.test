# Lightweight Docker image for running AutoGen evaluation tests
# Build: docker build -f Dockerfile.test -t ttm-gpt4-test .
# Run: docker run -e OPENAI_API_KEY=your-key ttm-gpt4-test python evaluation/run_full_evaluation.py

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install minimal system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Copy only test requirements
COPY requirements-test.txt .

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements-test.txt

# Create necessary directory structure
RUN mkdir -p nlu explainability/actions

# Copy only necessary files for testing
COPY evaluation/parsing_accuracy/ evaluation/parsing_accuracy/
COPY nlu/autogen_decoder.py nlu/autogen_decoder.py
COPY nlu/__init__.py nlu/__init__.py
COPY explainability/actions/get_action_functions.py explainability/actions/get_action_functions.py
COPY explainability/actions/*.py explainability/actions/

# Create empty __init__.py files if they don't exist
RUN touch nlu/__init__.py explainability/__init__.py explainability/actions/__init__.py

# Copy evaluation runner
COPY evaluation/run_full_evaluation.py evaluation/

# Set Python path
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Default command
CMD ["python", "evaluation/run_full_evaluation.py"]